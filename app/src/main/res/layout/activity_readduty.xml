<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/open"
    tools:context=".ReaddutyActivity">

    <TextView
        android:id="@+id/id"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="52dp"
        android:text="学号："
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/id1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:text=""
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:text="姓名："
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="88dp"
        android:text=""
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/duty"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:text="值日内容："
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        android:id="@+id/duty1"
        android:layout_width="295dp"
        android:layout_height="275dp"
        android:layout_marginStart="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duty" />

    <TextView
        android:id="@+id/time"
        android:layout_width="154dp"
        android:layout_height="41dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="10dp"
        android:text="值日时间："
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duty1" />

    <EditText
        android:id="@+id/time1"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginStart="44dp"
        android:text=""
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <Button
        android:id="@+id/update"
        android:layout_width="114dp"
        android:layout_height="65dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="16dp"
        android:background="#FFFB9C"
        android:text="update"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time1" />

    <Button
        android:id="@+id/back"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_marginEnd="72dp"
        android:background="#FFFB9C"
        android:text="back"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/update" />

    <Button
        android:id="@+id/save"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_marginEnd="288dp"
        android:background="#FFFB9C"
        android:text="save"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/update" />
</androidx.constraintlayout.widget.ConstraintLayout>