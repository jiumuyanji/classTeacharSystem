<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/open"
    tools:context=".WriteclassleaderActivity">

    <TextView
        android:id="@+id/id"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="180dp"
        android:text="学号："
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/id1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        android:text=""
        android:textSize="15dp"

        app:layout_constraintStart_toEndOf="@+id/id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:text="姓名："
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id" />

    <EditText
        android:id="@+id/name1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:text=""
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/id1" />


    <TextView
        android:id="@+id/work"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:text="职务："
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        android:id="@+id/work1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text=""
        android:layout_marginTop="28dp"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/work"
        app:layout_constraintTop_toBottomOf="@+id/name1" />

    <Button
        android:id="@+id/save"
        android:layout_width="118dp"
        android:layout_height="67dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="60dp"
        android:background="#FFFB9C"
        android:text="save"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/work" />

    <Button
        android:id="@+id/back"
        android:layout_width="118dp"
        android:layout_height="67dp"
        android:layout_marginEnd="76dp"
        android:background="#FFFB9C"
        android:text="back"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/save" />

</androidx.constraintlayout.widget.ConstraintLayout>