<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/open"
    tools:context=".AchievementnumberActivity">


    <EditText
        android:id="@+id/big"
        android:layout_width="103dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textName1" />

    <EditText
        android:id="@+id/little"
        android:layout_width="103dp"
        android:layout_height="46dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:text="&lt;总分&lt;"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/little"
        app:layout_constraintTop_toBottomOf="@+id/textName1" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="144dp"
        android:text="考试名:"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textName1"
        android:layout_width="188dp"
        android:layout_height="43dp"
        android:layout_marginTop="144dp"
        android:hint="如：期末考试"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/textName"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/query"
        android:layout_width="237dp"
        android:layout_height="104dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="52dp"
        android:text="查询"
        android:textSize="30dp"
        android:background="#FFF9BC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/result"
        android:layout_width="144dp"
        android:layout_height="75dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="48dp"
        android:text=""
        android:textSize="45dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/query" />

    <Button
        android:id="@+id/back"
        android:layout_width="91dp"
        android:layout_height="75dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFB9C"
        android:text="back"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>